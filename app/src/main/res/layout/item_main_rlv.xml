<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:id="@+id/item_main_rlv_layout"
    >
    <ImageView
        android:id="@+id/item_main_rlv_iv"
        android:src="@mipmap/ic_yanjiu_fs"
        android:layout_width="45dp"
        android:layout_height="45dp">
    </ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@id/item_main_rlv_iv"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_main_rlv_type"
            android:text="烟酒茶"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/item_main_rlv_remark"
            android:text="华子"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_main_rlv_iv"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_main_rlv_money"
            android:text="￥25.0"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/item_main_rlv_time"
            android:text="今天 18:10"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

</RelativeLayout>